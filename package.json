{
  "name": "@ballware/react-provider",
  "version": "6.0.6",
  "description": "Ballware Application Builder - React provider for contexts",
  "license": "MIT",
  "author": "frank@ballmeyer.com",
  "homepage": "https://github.com/frankball/ballware-react-provider#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/frankball/ballware-react-provider.git"
  },
  "bugs": {
    "url": "https://github.com/frankball/ballware-react-provider/issues"
  },
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint src --fix",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "docs": "typedoc --plugin typedoc-plugin-markdown"
  },
  "peerDependencies": {
    "react": ">=16",
    "react-router-dom": ">=5.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "module": "dist/ballware-react-provider.esm.js",
  "size-limit": [
    {
      "path": "dist/ballware-react-provider.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/ballware-react-provider.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.9.1",
    "@types/lodash": "^4.14.165",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-router-dom": "^5.1.5",
    "@types/uuid": "^8.3.0",
    "eslint": "^7.20.0",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.3.7",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-router-dom": "^5.2.0",
    "size-limit": "^4.9.1",
    "tsdx": "^0.14.1",
    "tslib": "^2.1.0",
    "typedoc": "^0.20.19",
    "typedoc-plugin-markdown": "^3.4.5",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "@ballware/identity-interface": "^6.0.2",
    "@ballware/meta-interface": "^6.0.2",
    "@ballware/react-contexts": "^6.0.8",
    "axios": "^0.21.1",
    "lodash": "^4.17.20",
    "moment": "^2.29.1",
    "uuid": "^8.3.2"
  }
}
